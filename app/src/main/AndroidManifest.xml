        android:label="@string/app_name"
        android:roundIcon="@mipmap/splash_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MobileProject"
        tools:targetApi="31">

        <!-- Activities -->
        <activity
            android:name=".login.LoginActivity"
            android:exported="false" />

        <activity

            android:name=".login.loading"

            android:exported="true" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

            <!-- This activity has the LAUNCHER category to act as the main entry point -->


        <activity
            android:name=".login.ForgotPassword"
            android:exported="false" />

        <activity
            android:name=".login.start"
            android:exported="false" />

        <activity
            android:name=".login.sigup"
            android:exported="false" />

        <activity
            android:name=".Favorite"
            android:exported="false" />

        <activity
            android:name=".activity.view.profile.Information_Account_Detail"
            android:exported="false" />

        <activity
            android:name=".activity.view.cart.Cart"
            android:exported="false" />

        <activity
            android:name=".ProductDetailsActivity"
            android:exported="false" />

        <activity
            android:name=".ViewAllProduct"
            android:exported="false" />

        <activity
            android:name=".activity.view.profile.Information_Account"
            android:exported="false" />

        <activity

            android:name=".activity.view.home.MainActivity"
            android:exported="false" />

    </application>

</manifest>
