<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MobileProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
    <!-- Dark mode -->
    <!-- Screen background if dark mode on -->

    <style name="SCREEN">
        <item name="android:background">#232323</item>
    </style>
    <!-- Texts background if dark mode on -->
    <style name="TEXT">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="SpecialText">
        <item name="android:textColor">#6E7883</item>
    </style>
    <style name="TitleText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textNumb">
        <item name="android:textColor">#6E7883</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Button background if dark mode on -->

    <style name="BUTTON">
        <item name="android:background">#232323</item>
        <item name="android:textColor">#000000</item>

    </style>

    <style name="IMAGEBUTTON">
        <item name="android:background">#232323</item>
    </style>

    <style name="AppBar">
        <item name="android:background">#232323</item>
    </style>

    <style name="MENU">
        <item name="android:background">#6D6D78</item>
    </style>

    <style name="TEXTCART">
        <item name="android:background">#232323</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!--> line if dark mode on -->

    <style name="line">#E7E7E8</style>
</resources>